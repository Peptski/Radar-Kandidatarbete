<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TextBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="boxStrokeWidth">5dp</item>
    </style>

    <style tools:override="true" name="PreferenceSummaryTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>
    
    <style name="AppTheme.Launcher">
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="InfoText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/info_text_size</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>

</resources>
